<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/cardbg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:background="?attr/cardbg">
    <ImageView
        android:id="@+id/pythontut"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_foreground"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_python"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pythontut"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Python"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="40dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="?attr/text_quiz_view"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_Tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_python"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Tutorial"
        android:textSize="40dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="?attr/text_quiz_view"
        android:textStyle="bold" />
</RelativeLayout>

</RelativeLayout>